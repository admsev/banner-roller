= simple_form_for [parent, @banner], :html => {:class => 'form-horizontal'} do |f|
  - unless f.object.new_record?
    %legend
      = image_tag f.object.image.url
  .form-inputs
    = f.input :name
    = f.input :url
    = f.input :image
    = f.input :show_stock
    = f.input :click_stock
  .form-actions
    = f.button :submit, :class=>'btn-primary'
